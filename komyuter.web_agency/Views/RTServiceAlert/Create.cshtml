@model komyuter.core.DomainClasses.RTServiceAlerts

@{
    ViewBag.Title = "Create Service Alert";
    Layout = "~/Views/Shared/_LayoutSpark_RT.cshtml";
}

<div class="wrapper">

    @Html.Partial("_SparkSideBarPartial")

    <div class="main">

        @Html.Partial("_SparkNavBarPartial")

        <main class="content">
            <div class="container-fluid">

                <div class="header">
                    <h1 class="header-title">
                        Service Alert
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Create New</li>
                        </ol>
                    </nav>
                </div>
                <div class="row">

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <button id="createnew" class="btn btn-pill btn-secondary" value="RTServiceAlert">Back to Service Alert List</button>
                            </div>

                            <div class="card-body">

                                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "validation-form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">

                                        <div class="col-12 col-lg-8">

                                            <form>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Route ID</label>
                                                    <div class="col-sm-10">
                                                        <select id="route_id" name="route_id" class="form-control">
                                                            <option value>Choose a route...</option>
                                                            <option value="ROULRT1">LRT1</option>
                                                            <option value="ROULRT2">LRT2</option>
                                                            <option value="ROUMRT3">MRT3</option>
                                                            <option value="ROUPNR">PNR</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Stop ID</label>
                                                    <div class="col-sm-10">
                                                        <select id="stop_id" name="stop_id" class="form-control">
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Header</label>
                                                    <div class="col-sm-10">
                                                        @Html.EditorFor(model => model.header, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "255" } })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Description</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextAreaFor(model => model.description, 4, 80, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "500" } })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Start Date/Time</label>
                                                    <div class="col-sm-10">
                                                        @*@Html.EditorFor(model => model.start_date, new { htmlAttributes = new { @class = "form-control", @data_mask = "00000000", @placeholder = "Required", @maxlength = "8" } })
        <span class="font-13 text-muted">e.g "YYYYMMDD"</span>*@
                                                        <div class="input-group date" id="start_date" data-target-input="nearest" style="width: 250px;">
                                                            <input type="text" name="start_date" class="form-control datetimepicker-input" data-target="#start_date">
                                                            <div class="input-group-append" data-target="#start_date" data-toggle="datetimepicker">
                                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                            </div>
                                                        </div>
                                                        <span class="font-13 text-muted">Required</span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">End Date/Time</label>
                                                    <div class="col-sm-10">
                                                        @*@Html.EditorFor(model => model.end_date, new { htmlAttributes = new { @class = "form-control", @data_mask = "00000000", @placeholder = "Required", @maxlength = "8" } })
        <span class="font-13 text-muted">e.g "YYYYMMDD"</span>*@
                                                        <div class="input-group date" id="end_date" data-target-input="nearest" style="width: 250px;">
                                                            <input type="text" id="end_date" name="end_date" class="form-control datetimepicker-input" data-target="#end_date">
                                                            <div class="input-group-append" data-target="#end_date" data-toggle="datetimepicker">
                                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                            </div>
                                                        </div>
                                                        <span class="font-13 text-muted">Required</span>
                                                    </div>
                                                </div>
                                                @*<div class="form-group row">
                <label class="col-form-label col-sm-2 text-sm-right">Agency ID</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.agency_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "11" } })
                    @*<span class="font-13 text-muted">e.g "DD/MM/YYYY"</span>
        </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-form-label col-sm-2 text-sm-right">Agency Name</label>
                                                            <div class="col-sm-10">
                                                                @Html.EditorFor(model => model.agency_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "255" } })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-form-label col-sm-2 text-sm-right">Agency URL</label>
                                                            <div class="col-sm-10">
                                                                @Html.EditorFor(model => model.agency_url, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "255" } })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-form-label col-sm-2 text-sm-right">Agency Timezone</label>
                                                            <div class="col-sm-10">
                                                                @Html.EditorFor(model => model.agency_timezone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "50" } })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-form-label col-sm-2 text-sm-right">Agency Language</label>
                                                            <div class="col-sm-10">
                                                                @Html.EditorFor(model => model.agency_lang, new { htmlAttributes = new { @class = "form-control", @maxlength = "2" } })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-form-label col-sm-2 text-sm-right">Agency Phone</label>
                                                            <div class="col-sm-10">
                                                                @Html.EditorFor(model => model.agency_phone, new { htmlAttributes = new { @class = "form-control", @data_mask = "0000-0000", @maxlength = "9" } })
                                                                <span class="font-13 text-muted">e.g "xxxx-xxxx"</span>
                                                            </div>
                                                        </div>*@

                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                <div class="form-group row">
                                                    <div class="col-sm-10 ml-sm-auto">
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                }




                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        @Html.Partial("_SparkFooterPartial")

    </div>
</div>



@model komyuter.core.DomainClasses.Calendar

@{
    ViewBag.Title = "Calendar Detail";
    Layout = "~/Views/Shared/_LayoutSpark.cshtml";
}


<div class="wrapper">

    @Html.Partial("_SparkSideBarPartial")

    <div class="main">

        @Html.Partial("_SparkNavBarPartial")

        <main class="content">
            <div class="container-fluid">

                <div class="header">
                    <h1 class="header-title">
                        Calendar
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Edit Record</li>
                        </ol>
                    </nav>
                </div>
                <div class="row">

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <button id="createnew" class="btn btn-pill btn-secondary" value="Calendar">Back to Calendar List</button>
                            </div>

                            <div class="card-body">

                                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "validation-form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.service_id)
                                    <div class="row">

                                        <div class="col-12 col-lg-8">

                                            <form>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Service ID</label>
                                                    <label class="col-form-label col-sm-10 text-sm-left text-primary font-weight-bold">
                                                        @Html.DisplayFor(model => model.service_id)
                                                    </label>
                                                </div>


                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Monday</label>
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.monday)
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Tuesday</label>
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.tuesday)
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Wednesday</label>
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.wednesday)
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Thursday</label>
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.thursday)
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Friday</label>
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.friday)
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Saturday</label>
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.saturday)
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Sunday</label>
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.sunday)
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Start Date</label>
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.start_date, new { htmlAttributes = new { @class = "form-control", @data_mask = "00000000", @placeholder = "Required", @maxlength = "8" } })
                                                        <span class="font-13 text-muted">e.g "YYYYMMDD"</span>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">End Date</label>
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.end_date, new { htmlAttributes = new { @class = "form-control", @data_mask = "00000000", @placeholder = "Required", @maxlength = "8" } })
                                                        <span class="font-13 text-muted">e.g "YYYYMMDD"</span>
                                                    </div>
                                                </div>

                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                <div class="form-group row">
                                                    <div class="col-sm-10 ml-sm-auto">
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>



        @Html.Partial("_SparkFooterPartial")

    </div>

</div>

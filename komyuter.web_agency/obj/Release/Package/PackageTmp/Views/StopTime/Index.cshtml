@model IEnumerable<komyuter.core.DomainClasses.StopTimes>

@{
    ViewBag.Title = "Stop Time List";
    Layout = "~/Views/Shared/_LayoutSpark.cshtml";
}


<div class="wrapper">

    @Html.Partial("_SparkSideBarPartial")

    <div class="main">

        @Html.Partial("_SparkNavBarPartial")

        <main class="content">
            <div class="container-fluid">

                <div class="header">
                    <h1 class="header-title">
                        Stop Time
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Listing</li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <button id="createnew" class="btn btn-pill btn-primary" value="StopTime/Create">Create New Stop Time</button>
                            </div>
                            <div class="card-body">
                                <table id="datatables-basic" class="table table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.trip_id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.arrival_time)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.departure_time)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.stop_id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.stop_sequence)
                                            </th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = item.id })" title="Details">@Html.Raw(item.trip_id)</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.arrival_time)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.departure_time)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.stop_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.stop_sequence)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Delete", new { id = item.id })" title="Delete"><i class="align-middle fas fa-fw fa-trash"></i></a>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                    @*<tfoot>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.agency_name)</th>
                                                <th>@Html.DisplayNameFor(model => model.agency_url)</th>
                                                <th>@Html.DisplayNameFor(model => model.agency_timezone)</th>
                                                <th>@Html.DisplayNameFor(model => model.agency_lang)</th>
                                            </tr>
                                        </tfoot>*@
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>

        @Html.Partial("_SparkFooterPartial")

    </div>

</div>
@model komyuter.core.DomainClasses.Trips

@{
    ViewBag.Title = "Trip Detail";
    Layout = "~/Views/Shared/_LayoutSpark.cshtml";
}


<div class="wrapper">

    @Html.Partial("_SparkSideBarPartial")

    <div class="main">

        @Html.Partial("_SparkNavBarPartial")

        <main class="content">
            <div class="container-fluid">

                <div class="header">
                    <h1 class="header-title">
                        Trip
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Edit Record</li>
                        </ol>
                    </nav>
                </div>
                <div class="row">

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <button id="createnew" class="btn btn-pill btn-secondary" value="Trip">Back to Trip List</button>
                            </div>

                            <div class="card-body">

                                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "validation-form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.trip_id)
                                    <div class="row">

                                        <div class="col-12 col-lg-8">

                                            <form>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Trip ID</label>
                                                    <label class="col-form-label col-sm-10 text-sm-left text-primary font-weight-bold">
                                                        @Html.DisplayFor(model => model.trip_id)
                                                    </label>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Route ID</label>
                                                    <div class="col-sm-10">
                                                        @Html.EditorFor(model => model.route_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "35" } })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Service ID</label>
                                                    <div class="col-sm-10">
                                                        @Html.EditorFor(model => model.service_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "35" } })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Trip Headsign</label>
                                                    <div class="col-sm-10">
                                                        @Html.EditorFor(model => model.trip_headsign, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "255" } })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Trip Shortname</label>
                                                    <div class="col-sm-10">
                                                        @Html.EditorFor(model => model.trip_short_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "50" } })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Direction ID</label>
                                                    <div class="col-sm-10">
                                                        @Html.EditorFor(model => model.direction_id, new { htmlAttributes = new { @class = "form-control", @data_mask = "0", @maxlength = "1" } })
                                                        <span class="font-13 text-muted">e.g 1, 0, or empty</span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-sm-2 text-sm-right">Shape ID</label>
                                                    <div class="col-sm-10">
                                                        @Html.EditorFor(model => model.shape_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required", @maxlength = "35" } })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-10 ml-sm-auto">
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>



        @Html.Partial("_SparkFooterPartial")

    </div>

</div>

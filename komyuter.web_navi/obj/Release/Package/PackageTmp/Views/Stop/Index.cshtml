@model IEnumerable<komyuter.core.DomainClasses.Stops>

@{
    ViewBag.Title = "Transit Monitor";
    Layout = "~/Views/Shared/_LayoutKomyuter.cshtml";
}



    <div id="divAlertContainer">
    </div>

<main class="main h-100 w-100">
    <div class="container" id="over_map" style="padding: 0px; width: 430px;">
        <div class="d-table-cell align-top" style="padding: 0px;">

            <div class="card" style="padding: 7px; margin: 7px; width: 400px;">
                <div class="card-body" style="padding: 0px; margin: 0px;">

                    <table border="0" width="100%">
                        <tr>
                            <td>
                                <button id="btnLrt1" class="btn btn-primary btn-sm" value="ROULRT1">LRT1</button>
                                <button id="btnLrt2" class="btn btn-primary btn-sm" value="ROULRT2">LRT2</button>
                                <button id="btnMrt3" class="btn btn-primary btn-sm" value="ROUMRT3">MRT3</button>
                                <button id="btnPnr" class="btn btn-primary btn-sm" value="ROUPNR">PNR</button>
                            </td>
                            <td align="right">
                                <img src="img/big_bold.png" width="110" />
                            </td>
                        </tr>
                    </table>
                    <div style="padding: 3px;"></div>

                    <form id="validation-form">

                        <div class="form-group">
                            <div class="d-flex">
                                <select id="ddLStation" class="form-control" name="validation-select2" style="width: 100%">
                                </select>
                            </div>
                        </div>

                        <div id="alertChooseStation" class="alert alert-primary alert-outline alert-dismissible" role="alert">
                            <div class="alert-icon">
                                <i class="far fa-fw fa-bell"></i>
                            </div>
                            <div class="alert-message">
                                Choose a Station from the dropdown.
                            </div>
                        </div>

                        <div id="alertService" class="alert alert-warning alert-outline alert-dismissible hidden" role="alert">
                            <div class="alert-icon">
                                <i class="far fa-fw fa-bell"></i>
                            </div>
                            <div class="alert-message">
                            </div>
                        </div>

                        <div id="divtable">
                            <table id="tblStops" border="0" class="table table-striped table-hover" style="margin-bottom: 0px;">
                                <tbody></tbody>
                            </table>
                        </div>

                        <div class="tablefolder" align="center"><img class="folderimg" src="~/img/tbl_collapse.png" /></div>

                        @{
                            DateTime phDateTime = DateTime.UtcNow.AddHours(8);
                        }


                        <div id="pageClock" class="datacontainer">@Html.Raw(phDateTime.ToString("yyyy-MM-ddTHH:mm:ss+08:00"))</div>

                        <div id="serviceAlertData" class="datacontainer">
                            service alert data here
                        </div>
                        <div id="stopData" class="datacontainer"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

